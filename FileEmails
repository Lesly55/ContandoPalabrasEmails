import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

public class FileEmails {
	List<String[]> renglones;
	String[][] matrizEmails; 
	HashMap<String, Integer> emails =  new HashMap<>();
	
	public FileEmails() throws IOException {
		CrearMatriz();
		CrearHashMap();
		CrearFile();
		
	}
	
	public void CrearMatriz() {
		renglones = new ArrayList<String[]>();
		try (BufferedReader br = new BufferedReader(new FileReader("/Users/lesly/Desktop/emails.csv"))) {
		    String line;
		    while ((line = br.readLine()) != null) {
		        String[] emails = line.split(",");
		        renglones.add(emails);
		    }
		    br.close();
		}
		catch(Exception e){
			e.printStackTrace();
		}
		
		
		matrizEmails = new String[renglones.size()][];
		for (int i = 0; i < renglones.size(); i++) {
		    String[] column = renglones.get(i);
		    matrizEmails[i] = column;
		}
	}
	
	public void CrearHashMap() {
		
		//meter string palabras
		for(int j = 1; j < 3001; j++) {
			emails.put(matrizEmails[0][j], 0);
		}
		
		//meter valores de palabras
		for(int j = 1; j < 3001; j++) {
			int valor = 0;
			for(int i = 953; i < 1003; i++) {
				valor = valor + Integer.parseInt(matrizEmails[i][j]);
			}	
			emails.replace(matrizEmails[0][j], valor);
		}
		
	}
	
	public void CrearFile() throws IOException {
		 try {
	            FileWriter writer = new FileWriter("emails.txt");
	            BufferedWriter bufWriter = new BufferedWriter(writer);
	            for (Map.Entry<String, Integer> entry : emails.entrySet()) {
	                bufWriter.write(entry.getKey() + "=" + entry.getValue());
	                bufWriter.newLine();
	            }
	            bufWriter.close();
	            writer.close();
	            System.out.println("yei! se logro!");
	        } catch (IOException e) {
	            System.out.println("ERROR!ERROR! EN: " + e.getMessage());
	        }
	
	}
}
